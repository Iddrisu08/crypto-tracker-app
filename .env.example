# üîê Environment Variables Template
# Copy this file to .env.local and fill in your values

# =======================
# GITHUB SECRETS SETUP
# =======================
# Add these to your GitHub repository:
# Settings ‚Üí Secrets and Variables ‚Üí Actions

# Docker Hub Credentials
DOCKER_USERNAME=your-dockerhub-username
DOCKER_PASSWORD=your-dockerhub-access-token

# Render Deploy Hooks (get from Render dashboard)
RENDER_BACKEND_DEPLOY_HOOK=https://api.render.com/deploy/srv-xxxxxxxxx
RENDER_FRONTEND_DEPLOY_HOOK=https://api.render.com/deploy/srv-yyyyyyyyy

# Render Service URLs (will be available after deployment)
RENDER_BACKEND_URL=https://crypto-tracker-backend.onrender.com
RENDER_FRONTEND_URL=https://crypto-tracker-frontend.onrender.com

# =======================
# BACKEND ENVIRONMENT
# =======================

# Flask Configuration
FLASK_ENV=production
FLASK_APP=app.py
PORT=5000

# Security Keys (generate secure random strings)
SECRET_KEY=your-super-secret-key-for-flask-sessions
JWT_SECRET_KEY=your-jwt-signing-key-for-authentication

# CORS Origins (update with your frontend URL)
CORS_ORIGINS=https://crypto-tracker-frontend.onrender.com,http://localhost:3000

# Optional: Email Configuration for Price Alerts
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# =======================
# FRONTEND BUILD ARGS
# =======================

# API URL for frontend to connect to backend
VITE_API_URL=https://crypto-tracker-backend.onrender.com

# =======================
# DEVELOPMENT OVERRIDES
# =======================

# Local development
# VITE_API_URL=http://localhost:5002
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =======================
# SECURITY NOTES
# =======================

# 1. Generate secure keys:
#    python -c "import secrets; print(secrets.token_urlsafe(32))"
#
# 2. Never commit .env files to git
#
# 3. Use different keys for development and production
#
# 4. For Gmail SMTP, use App Passwords, not your regular password:
#    https://support.google.com/accounts/answer/185833