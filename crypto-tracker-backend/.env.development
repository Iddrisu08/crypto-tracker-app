# ===============================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ===============================================
# This file contains settings for local development.
# Uses SQLite database and local services for fast development.

# ENVIRONMENT IDENTIFICATION
NODE_ENV=development
FLASK_ENV=development
FLASK_DEBUG=true
ENV_NAME=development

# DATABASE CONFIGURATION
# SQLite for fast local development (no PostgreSQL setup needed)
DATABASE_URL=sqlite:///crypto_tracker_dev.db
DATABASE_ECHO=true  # Log all SQL queries for debugging

# REDIS CONFIGURATION 
# Local Redis instance (install with: brew install redis)
REDIS_URL=redis://localhost:6379/0
CACHE_TIMEOUT=60  # Short cache for development (1 minute)

# AUTHENTICATION & SECURITY
# Development secrets (not secure, only for local use)
JWT_SECRET_KEY=dev-jwt-secret-key-not-secure-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=86400  # 24 hours for development convenience
SECRET_KEY=dev-flask-secret-key-not-secure-change-in-production

# API CONFIGURATION
# Allow more requests for development testing
RATE_LIMIT_PER_MINUTE=1000
API_VERSION=v1

# CORS CONFIGURATION
# Allow frontend development servers
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:3000

# EXTERNAL APIS
# CoinGecko API (free tier - no API key needed)
COINGECKO_API_URL=https://api.coingecko.com/api/v3
COINGECKO_API_KEY=  # Optional for free tier

# LOGGING CONFIGURATION
LOG_LEVEL=DEBUG  # Verbose logging for development
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/crypto_tracker_dev.log

# DEVELOPMENT FEATURES
# Enable development-only features
ENABLE_DEBUG_ENDPOINTS=true
ENABLE_MOCK_DATA=true
SKIP_EMAIL_VERIFICATION=true  # Skip email verification in dev

# MONITORING & PERFORMANCE
# Disable heavy monitoring in development
ENABLE_METRICS=false
ENABLE_TRACING=false

# BACKUP CONFIGURATION
# No automated backups needed in development
ENABLE_AUTOMATED_BACKUPS=false

# NOTIFICATION SETTINGS
# Disable notifications in development
ENABLE_PRICE_ALERTS=false
ENABLE_EMAIL_NOTIFICATIONS=false

# DEVELOPMENT HELPERS
# Seed database with test data on startup
SEED_TEST_DATA=true
AUTO_MIGRATE_DB=true  # Automatically run database migrations

# PORT CONFIGURATION
PORT=5001
HOST=0.0.0.0

# SSL/TLS (disabled for local development)
USE_HTTPS=false

# DEVELOPMENT OVERRIDES
# Override production behavior for development ease
BYPASS_RATE_LIMITS=true
ALLOW_WEAK_PASSWORDS=true  # For testing only
DISABLE_CSRF=true  # Easier API testing

# TESTING CONFIGURATION
TEST_DATABASE_URL=sqlite:///crypto_tracker_test.db