# ===============================================
# FRONTEND PRODUCTION ENVIRONMENT
# ===============================================
# Configuration for production React application

# ENVIRONMENT IDENTIFICATION
NODE_ENV=production
VITE_ENV_NAME=production

# API CONFIGURATION
# Production backend server
VITE_API_BASE_URL=${VITE_API_BASE_URL}
VITE_API_VERSION=v1
VITE_API_TIMEOUT=10000  # 10 seconds for production

# BACKEND ENDPOINTS
VITE_API_URL=${VITE_API_BASE_URL}/api/v1
VITE_WEBSOCKET_URL=${VITE_WEBSOCKET_URL}

# PRODUCTION FEATURES
# Disable all debug features
VITE_ENABLE_DEV_TOOLS=false
VITE_ENABLE_DEBUG_LOGGING=false
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_HOT_RELOAD=false

# PRODUCTION IDENTIFICATION
# No environment banners in production
VITE_SHOW_ENV_BANNER=false

# AUTHENTICATION
# Secure authentication settings
VITE_JWT_STORAGE_KEY=crypto_tracker_jwt
VITE_AUTO_LOGOUT_MINUTES=60  # 1 hour for security
VITE_REMEMBER_LOGIN=true

# UI CONFIGURATION
# Production UI settings
VITE_THEME=light
VITE_DEFAULT_CURRENCY=USD
VITE_DECIMAL_PLACES=6
VITE_REFRESH_INTERVAL=120000  # 2 minutes

# CHART CONFIGURATION
# Optimized chart performance
VITE_CHART_ANIMATION=true
VITE_CHART_RESPONSIVE=true
VITE_CHART_UPDATE_MODE=resize
VITE_CHART_PERFORMANCE_MODE=true

# PRICE UPDATES
# Conservative update frequency for production
VITE_PRICE_UPDATE_INTERVAL=60000  # 1 minute
VITE_ENABLE_LIVE_PRICES=true
VITE_PRICE_CHANGE_ANIMATION=true

# PORTFOLIO SETTINGS
# Production portfolio configuration
VITE_DEFAULT_PORTFOLIO_VIEW=overview
VITE_SHOW_SMALL_HOLDINGS=false  # Hide holdings < $1 for cleaner UI
VITE_PORTFOLIO_REFRESH_RATE=60000  # 1 minute

# TRANSACTION SETTINGS
# Full crypto support in production
VITE_CRYPTO_SYMBOLS=BTC,ETH,ADA,DOT,MATIC,LINK,XRP,LTC,BCH,DOGE,AVAX,SOL,UNI,AAVE,COMP,ATOM,ALGO,XTZ,FIL,VET
VITE_DEFAULT_TRANSACTION_TYPE=buy
VITE_ENABLE_TRANSACTION_VALIDATION=true

# NOTIFICATION SETTINGS
# Production notification settings
VITE_ENABLE_NOTIFICATIONS=true
VITE_NOTIFICATION_DURATION=3000  # 3 seconds
VITE_ENABLE_SOUND_NOTIFICATIONS=false

# ERROR HANDLING
# Production error handling
VITE_ENABLE_ERROR_BOUNDARY=true
VITE_SHOW_ERROR_DETAILS=false  # Hide technical details from users
VITE_ERROR_RETRY_ATTEMPTS=2
VITE_ERROR_REPORTING_ENDPOINT=${VITE_ERROR_REPORTING_ENDPOINT}

# PERFORMANCE SETTINGS
# Maximum performance optimizations
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_CODE_SPLITTING=true
VITE_BUNDLE_ANALYZER=false
VITE_PRELOAD_CRITICAL_ROUTES=true

# ANALYTICS
# Full analytics in production
VITE_ENABLE_ANALYTICS=true
VITE_ANALYTICS_DEBUG=false
VITE_GOOGLE_ANALYTICS_ID=${VITE_GOOGLE_ANALYTICS_ID}
VITE_MIXPANEL_TOKEN=${VITE_MIXPANEL_TOKEN}

# FEATURE FLAGS
# All features enabled in production
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ADVANCED_CHARTS=true
VITE_ENABLE_EXPORT_FEATURES=true
VITE_ENABLE_PORTFOLIO_SHARING=true

# API BEHAVIOR
# Robust API handling
VITE_ENABLE_API_MOCKING=false
VITE_API_RETRY_ATTEMPTS=2
VITE_API_RETRY_DELAY=2000
VITE_API_CIRCUIT_BREAKER=true

# DEVELOPMENT TOOLS
# All dev tools disabled in production
VITE_ENABLE_REDUX_DEVTOOLS=false
VITE_ENABLE_REACT_DEVTOOLS=false
VITE_ENABLE_PERFORMANCE_PROFILER=false

# CACHE SETTINGS
# Aggressive caching for production performance
VITE_CACHE_PORTFOLIO_DATA=true
VITE_CACHE_PRICE_DATA=true
VITE_CACHE_DURATION=300000  # 5 minutes
VITE_ENABLE_SERVICE_WORKER=true

# SECURITY SETTINGS
# Maximum security for production
VITE_ENABLE_CSP=true
VITE_ENABLE_HTTPS_ONLY=true
VITE_SECURE_COOKIES=true
VITE_ENABLE_HSTS=true

# LOGGING
# Minimal logging for production
VITE_LOG_LEVEL=error
VITE_ENABLE_CONSOLE_LOGGING=false  # No console logs in production
VITE_ENABLE_REMOTE_LOGGING=true
VITE_LOG_ENDPOINT=${VITE_LOG_ENDPOINT}

# TESTING SUPPORT
# Disable test features in production
VITE_ENABLE_TEST_IDS=false
VITE_MOCK_USER_DATA=false
VITE_TESTING_MODE=false

# LOCAL STORAGE
# Production storage settings
VITE_STORAGE_PREFIX=crypto_tracker_
VITE_CLEAR_STORAGE_ON_LOGOUT=true
VITE_STORAGE_ENCRYPTION=true

# PRODUCTION SECURITY
# No bypasses or debug features
VITE_BYPASS_AUTH=false
VITE_SIMULATE_SLOW_NETWORK=false
VITE_ENABLE_DEBUG_PANELS=false

# EXTERNAL SERVICES
# Full external service integration
VITE_ENABLE_THIRD_PARTY_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_SENTRY_DSN=${VITE_SENTRY_DSN}
VITE_SENTRY_ENVIRONMENT=production

# BUILD SETTINGS
# Production-optimized build
VITE_SOURCE_MAPS=false  # No source maps in production
VITE_MINIFY=true
VITE_TREE_SHAKING=true
VITE_COMPRESSION=true

# MONITORING
# Full production monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_SAMPLE_RATE=0.1  # 10% sampling
VITE_ENABLE_REAL_USER_MONITORING=true

# CONTENT SECURITY
# Strict Content Security Policy
VITE_CSP_REPORT_URI=${VITE_CSP_REPORT_URI}
VITE_CSP_REPORT_ONLY=false  # Enforce CSP in production

# SEO & METADATA
# Search engine optimization
VITE_ENABLE_SEO_OPTIMIZATION=true
VITE_CANONICAL_URL=${VITE_CANONICAL_URL}
VITE_META_DESCRIPTION="Track your cryptocurrency portfolio with real-time prices and analytics"

# ACCESSIBILITY
# Accessibility features
VITE_ENABLE_ACCESSIBILITY_FEATURES=true
VITE_HIGH_CONTRAST_MODE=true
VITE_SCREEN_READER_SUPPORT=true

# PROGRESSIVE WEB APP
# PWA features for production
VITE_ENABLE_PWA=true
VITE_PWA_CACHE_STRATEGY=NetworkFirst
VITE_PWA_OFFLINE_SUPPORT=true

# RATE LIMITING
# Production rate limiting awareness
VITE_API_RATE_LIMIT=60  # Requests per minute
VITE_SHOW_RATE_LIMIT_WARNINGS=false  # Don't confuse users

# LEGAL & COMPLIANCE
# Legal compliance features
VITE_ENABLE_COOKIE_CONSENT=true
VITE_ENABLE_PRIVACY_MODE=true
VITE_GDPR_COMPLIANCE=true

# PERFORMANCE BUDGETS
# Production performance limits
VITE_BUNDLE_SIZE_LIMIT=500kb
VITE_ASSET_SIZE_LIMIT=100kb
VITE_INITIAL_LOAD_TIME_LIMIT=3000  # 3 seconds

# CDN & ASSETS
# Content delivery network settings
VITE_CDN_URL=${VITE_CDN_URL}
VITE_ASSET_CDN=${VITE_ASSET_CDN}

# MAINTENANCE MODE
# Maintenance mode configuration
VITE_MAINTENANCE_MODE=false
VITE_MAINTENANCE_MESSAGE="We're performing scheduled maintenance. Please check back soon."

# FEATURE ROLLOUT
# Gradual feature rollout settings
VITE_FEATURE_ROLLOUT_PERCENTAGE=100
VITE_BETA_FEATURES_ENABLED=false