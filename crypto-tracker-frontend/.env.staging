# ===============================================
# FRONTEND STAGING ENVIRONMENT
# ===============================================
# Configuration for staging React application

# ENVIRONMENT IDENTIFICATION
NODE_ENV=staging
VITE_ENV_NAME=staging

# API CONFIGURATION
# Staging backend server (will be injected by Render/CI)
VITE_API_BASE_URL=${VITE_API_BASE_URL}
VITE_API_VERSION=v1
VITE_API_TIMEOUT=15000  # 15 seconds

# BACKEND ENDPOINTS
VITE_API_URL=${VITE_API_BASE_URL}/api/v1
VITE_WEBSOCKET_URL=${VITE_WEBSOCKET_URL}

# STAGING FEATURES
# Limited debug features for staging
VITE_ENABLE_DEV_TOOLS=false
VITE_ENABLE_DEBUG_LOGGING=true  # Keep logs for debugging staging issues
VITE_ENABLE_MOCK_DATA=false  # Use real API data
VITE_ENABLE_HOT_RELOAD=false

# STAGING IDENTIFICATION
# Visual indicators this is staging
VITE_SHOW_ENV_BANNER=true
VITE_ENV_BANNER_COLOR=#FFA500  # Orange banner
VITE_ENV_BANNER_TEXT=STAGING ENVIRONMENT

# AUTHENTICATION
# Production-like auth but with easier testing
VITE_JWT_STORAGE_KEY=crypto_tracker_jwt_staging
VITE_AUTO_LOGOUT_MINUTES=60  # 1 hour
VITE_REMEMBER_LOGIN=true

# UI CONFIGURATION
# Production-like UI settings
VITE_THEME=light
VITE_DEFAULT_CURRENCY=USD
VITE_DECIMAL_PLACES=6
VITE_REFRESH_INTERVAL=60000  # 1 minute

# CHART CONFIGURATION
# Production chart settings
VITE_CHART_ANIMATION=true
VITE_CHART_RESPONSIVE=true
VITE_CHART_UPDATE_MODE=resize
VITE_CHART_PERFORMANCE_MODE=false

# PRICE UPDATES
# Moderate update frequency for staging
VITE_PRICE_UPDATE_INTERVAL=30000  # 30 seconds
VITE_ENABLE_LIVE_PRICES=true
VITE_PRICE_CHANGE_ANIMATION=true

# PORTFOLIO SETTINGS
# Staging portfolio configuration
VITE_DEFAULT_PORTFOLIO_VIEW=overview
VITE_SHOW_SMALL_HOLDINGS=true
VITE_PORTFOLIO_REFRESH_RATE=30000  # 30 seconds

# TRANSACTION SETTINGS
# Full transaction support in staging
VITE_CRYPTO_SYMBOLS=BTC,ETH,ADA,DOT,MATIC,LINK,XRP,LTC,BCH,DOGE,AVAX,SOL,UNI,AAVE,COMP
VITE_DEFAULT_TRANSACTION_TYPE=buy
VITE_ENABLE_TRANSACTION_VALIDATION=true

# NOTIFICATION SETTINGS
# Enable notifications for staging testing
VITE_ENABLE_NOTIFICATIONS=true
VITE_NOTIFICATION_DURATION=4000  # 4 seconds
VITE_ENABLE_SOUND_NOTIFICATIONS=false

# ERROR HANDLING
# Production-like error handling with some debug info
VITE_ENABLE_ERROR_BOUNDARY=true
VITE_SHOW_ERROR_DETAILS=true  # Show details in staging for debugging
VITE_ERROR_RETRY_ATTEMPTS=3
VITE_ERROR_REPORTING_ENDPOINT=${VITE_ERROR_REPORTING_ENDPOINT}

# PERFORMANCE SETTINGS
# Enable optimizations for staging
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_CODE_SPLITTING=true
VITE_BUNDLE_ANALYZER=false

# ANALYTICS
# Limited analytics in staging
VITE_ENABLE_ANALYTICS=false  # Avoid polluting production analytics
VITE_ANALYTICS_DEBUG=true
VITE_STAGING_ANALYTICS_ID=${VITE_STAGING_ANALYTICS_ID}

# FEATURE FLAGS
# Test features in staging before production
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ADVANCED_CHARTS=true
VITE_ENABLE_EXPORT_FEATURES=true
VITE_ENABLE_PORTFOLIO_SHARING=true  # Test sharing features

# API BEHAVIOR
# Production-like API behavior
VITE_ENABLE_API_MOCKING=false
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# DEVELOPMENT TOOLS
# Disable dev tools in staging
VITE_ENABLE_REDUX_DEVTOOLS=false
VITE_ENABLE_REACT_DEVTOOLS=false
VITE_ENABLE_PERFORMANCE_PROFILER=false

# CACHE SETTINGS
# Enable caching for performance testing
VITE_CACHE_PORTFOLIO_DATA=true
VITE_CACHE_PRICE_DATA=true
VITE_CACHE_DURATION=300000  # 5 minutes

# SECURITY SETTINGS
# Production-like security
VITE_ENABLE_CSP=true
VITE_ENABLE_HTTPS_ONLY=true
VITE_SECURE_COOKIES=true

# LOGGING
# Moderate logging for staging
VITE_LOG_LEVEL=info
VITE_ENABLE_CONSOLE_LOGGING=true
VITE_ENABLE_REMOTE_LOGGING=true
VITE_LOG_ENDPOINT=${VITE_LOG_ENDPOINT}

# TESTING SUPPORT
# Keep test support for staging validation
VITE_ENABLE_TEST_IDS=true
VITE_MOCK_USER_DATA=false
VITE_TESTING_MODE=false

# LOCAL STORAGE
# Staging-specific storage
VITE_STORAGE_PREFIX=crypto_tracker_staging_
VITE_CLEAR_STORAGE_ON_LOGOUT=true

# STAGING OVERRIDES
# Staging-specific behavior
VITE_BYPASS_AUTH=false
VITE_SIMULATE_SLOW_NETWORK=false
VITE_ENABLE_DEBUG_PANELS=true  # Allow some debug panels

# EXTERNAL SERVICES
# Test external services in staging
VITE_ENABLE_THIRD_PARTY_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=true
VITE_SENTRY_DSN=${VITE_SENTRY_DSN}
VITE_SENTRY_ENVIRONMENT=staging

# BUILD SETTINGS
# Optimized staging build
VITE_SOURCE_MAPS=true  # Keep source maps for debugging
VITE_MINIFY=true
VITE_TREE_SHAKING=true

# MONITORING
# Basic monitoring for staging
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_SAMPLE_RATE=1.0  # 100% sampling in staging

# CONTENT SECURITY
# Content Security Policy for staging
VITE_CSP_REPORT_URI=${VITE_CSP_REPORT_URI}
VITE_CSP_REPORT_ONLY=true  # Report-only mode in staging

# STAGING VALIDATION
# Features to help validate staging deployment
VITE_SHOW_BUILD_INFO=true
VITE_SHOW_API_STATUS=true
VITE_ENABLE_HEALTH_CHECKS=true

# RATE LIMITING
# Frontend rate limiting awareness
VITE_API_RATE_LIMIT=200  # Requests per minute
VITE_SHOW_RATE_LIMIT_WARNINGS=true