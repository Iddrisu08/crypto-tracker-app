# ===============================================
# FRONTEND DEVELOPMENT ENVIRONMENT
# ===============================================
# Configuration for local React development with Vite

# ENVIRONMENT IDENTIFICATION
NODE_ENV=development
VITE_ENV_NAME=development

# API CONFIGURATION
# Local backend server
VITE_API_BASE_URL=http://localhost:5001
VITE_API_VERSION=v1
VITE_API_TIMEOUT=30000  # 30 seconds

# BACKEND ENDPOINTS
VITE_API_URL=http://localhost:5001/api/v1
VITE_WEBSOCKET_URL=ws://localhost:5001

# DEVELOPMENT FEATURES
# Enable development tools and features
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_DEBUG_LOGGING=true
VITE_ENABLE_MOCK_DATA=true  # Fallback mock data if backend down
VITE_ENABLE_HOT_RELOAD=true

# AUTHENTICATION
# Development-friendly auth settings
VITE_JWT_STORAGE_KEY=crypto_tracker_jwt_dev
VITE_AUTO_LOGOUT_MINUTES=1440  # 24 hours for development convenience
VITE_REMEMBER_LOGIN=true

# UI CONFIGURATION
# Development UI settings
VITE_THEME=light
VITE_DEFAULT_CURRENCY=USD
VITE_DECIMAL_PLACES=6
VITE_REFRESH_INTERVAL=30000  # 30 seconds

# CHART CONFIGURATION
# Chart.js settings for development
VITE_CHART_ANIMATION=true
VITE_CHART_RESPONSIVE=true
VITE_CHART_UPDATE_MODE=resize

# PRICE UPDATES
# Real-time price update settings
VITE_PRICE_UPDATE_INTERVAL=10000  # 10 seconds for active development
VITE_ENABLE_LIVE_PRICES=true
VITE_PRICE_CHANGE_ANIMATION=true

# PORTFOLIO SETTINGS
# Portfolio display configuration
VITE_DEFAULT_PORTFOLIO_VIEW=overview
VITE_SHOW_SMALL_HOLDINGS=true  # Show holdings < $1
VITE_PORTFOLIO_REFRESH_RATE=15000  # 15 seconds

# TRANSACTION SETTINGS
# Transaction form configuration
VITE_CRYPTO_SYMBOLS=BTC,ETH,ADA,DOT,MATIC,LINK,XRP,LTC,BCH,DOGE
VITE_DEFAULT_TRANSACTION_TYPE=buy
VITE_ENABLE_TRANSACTION_VALIDATION=true

# NOTIFICATION SETTINGS
# Frontend notification configuration
VITE_ENABLE_NOTIFICATIONS=true
VITE_NOTIFICATION_DURATION=5000  # 5 seconds
VITE_ENABLE_SOUND_NOTIFICATIONS=false  # Avoid annoying sounds in dev

# ERROR HANDLING
# Development error handling
VITE_ENABLE_ERROR_BOUNDARY=true
VITE_SHOW_ERROR_DETAILS=true  # Show full error details in development
VITE_ERROR_RETRY_ATTEMPTS=3

# PERFORMANCE SETTINGS
# Development performance settings
VITE_ENABLE_LAZY_LOADING=false  # Disable for faster development
VITE_ENABLE_CODE_SPLITTING=false
VITE_BUNDLE_ANALYZER=false

# ANALYTICS (disabled in development)
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_DEBUG=true

# FEATURE FLAGS
# Development feature toggles
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ADVANCED_CHARTS=true
VITE_ENABLE_EXPORT_FEATURES=true
VITE_ENABLE_PORTFOLIO_SHARING=false  # Disable sharing in dev

# API MOCKING
# Mock API responses for offline development
VITE_ENABLE_API_MOCKING=false
VITE_MOCK_DELAY=500  # Simulate API delay

# DEVELOPMENT TOOLS
# Additional development tools
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_REACT_DEVTOOLS=true
VITE_ENABLE_PERFORMANCE_PROFILER=false

# CACHE SETTINGS
# Frontend caching for development
VITE_CACHE_PORTFOLIO_DATA=false  # Always fetch fresh data
VITE_CACHE_PRICE_DATA=false
VITE_CACHE_DURATION=60000  # 1 minute if caching enabled

# SECURITY SETTINGS (relaxed for development)
VITE_ENABLE_CSP=false  # Content Security Policy off for dev tools
VITE_ENABLE_HTTPS_ONLY=false
VITE_SECURE_COOKIES=false

# LOGGING
# Frontend logging configuration
VITE_LOG_LEVEL=debug
VITE_ENABLE_CONSOLE_LOGGING=true
VITE_ENABLE_REMOTE_LOGGING=false

# TESTING SUPPORT
# Configuration for testing
VITE_ENABLE_TEST_IDS=true  # Add test IDs to elements
VITE_MOCK_USER_DATA=true
VITE_TESTING_MODE=false

# LOCAL STORAGE
# Local storage configuration
VITE_STORAGE_PREFIX=crypto_tracker_dev_
VITE_CLEAR_STORAGE_ON_LOGOUT=false  # Keep data for development

# DEVELOPMENT OVERRIDES
# Override production behavior
VITE_BYPASS_AUTH=false  # Still require auth in development
VITE_SIMULATE_SLOW_NETWORK=false
VITE_ENABLE_DEBUG_PANELS=true

# EXTERNAL SERVICES
# Third-party service configuration (dev keys/endpoints)
VITE_ENABLE_THIRD_PARTY_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false

# BUILD SETTINGS
# Development build settings
VITE_SOURCE_MAPS=true
VITE_MINIFY=false
VITE_TREE_SHAKING=false