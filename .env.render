# ===============================================
# RENDER DEPLOYMENT ENVIRONMENT CONFIGURATION
# ===============================================
# Environment variables for Render.com deployment
# Copy these to your Render service environment settings

# -----------------------------------------------
# APPLICATION ENVIRONMENT
# -----------------------------------------------
FLASK_ENV=production
ENV_NAME=production
DEBUG=false

# -----------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------
# DATABASE_URL will be automatically set by Render PostgreSQL service
# Format: postgresql://user:password@host:port/dbname
DATABASE_URL=${DATABASE_URL}

# -----------------------------------------------
# CACHE CONFIGURATION  
# -----------------------------------------------
# REDIS_URL will be automatically set by Render Redis service
REDIS_URL=${REDIS_URL}

# -----------------------------------------------
# SECURITY
# -----------------------------------------------
# These should be generated automatically by Render or set manually
SECRET_KEY=${SECRET_KEY}
JWT_SECRET_KEY=${JWT_SECRET_KEY}

# -----------------------------------------------
# CORS CONFIGURATION
# -----------------------------------------------
# Set this to your frontend domain
CORS_ORIGINS=https://crypto-tracker-frontend.onrender.com

# -----------------------------------------------
# API CONFIGURATION
# -----------------------------------------------
COINBASE_API_URL=https://api.coinbase.com/v2
API_RATE_LIMIT=100
API_TIMEOUT=30

# -----------------------------------------------
# LOGGING
# -----------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true

# -----------------------------------------------
# MONITORING
# -----------------------------------------------
ENABLE_METRICS=true
METRICS_PORT=8080

# -----------------------------------------------
# BACKUP CONFIGURATION
# -----------------------------------------------
BACKUP_RETENTION_DAYS=30
# BACKUP_STORAGE_URL=s3://your-backup-bucket/crypto-tracker-backups
# BACKUP_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# -----------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------
ENABLE_PRICE_ALERTS=true
ENABLE_PORTFOLIO_ANALYTICS=true
ENABLE_USER_REGISTRATION=true

# -----------------------------------------------
# PERFORMANCE
# -----------------------------------------------
CACHE_TIMEOUT=300
PRICE_UPDATE_INTERVAL=300
MAX_PORTFOLIO_ITEMS=100

# -----------------------------------------------
# EMAIL CONFIGURATION (Optional)
# -----------------------------------------------
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# -----------------------------------------------
# EXTERNAL SERVICES (Optional)
# -----------------------------------------------
# NEWS_API_KEY=your-news-api-key
# TWITTER_API_KEY=your-twitter-api-key