# ENVIRONMENT AND CONFIG FILES
# -----------------------------------------------
.env
.env.*
!.env.production  # Include production env in production builds
config/secrets/
.secrets

# -----------------------------------------------
# NODE.JS / NPM
# -----------------------------------------------
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.npm
.yarn
.pnp
.pnp.js

# -----------------------------------------------
